<div class="container">

<div class="row">    
    {{!-- <div class="col-sm-2"></div> --}}
    <div class="col-sm-8">
        <div class="page-header">
            <h1>Create A Story</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        {{!-- Create form --}}
        <form class="create-form">
            <div class="column">
                {{!-- <div class="col-sm-2"> --}}
                    <div class="form-group">
                        <label for="createStoryTitle" >Story Title Here </label>   
                            <input type="text" id="createStoryTitle" name="name"> 
                    </div>
                    <div class="form-group">
                        <label for="createStoryGenre" >Type Genre Here: </label>   
                            <input type="text" id="createStoryGenre" name="name"> 
                    </div>

                    <div class="form-group">
                        <label for="minimumNumberOfVoters">Minimum Number Of Voters</label>
                            <input type="number" min="1" max="100" id="minimumNumberOfVoters" name="name">
                    </div>        
                {{!-- </div> --}}
            </div> 

            <div class="column">
                {{!-- <div class="col-sm-2"> --}}
                    <div class="form-group">
                        <label for="minimumNumberOfWriters">Minimum Number Of Writers</label>
                            <input type="number" min="1" max="50" id="minimumNumberOfWriters" name="name">
                    </div>

                    <div class="form-group">
                        <label for="writingTimePeriodInMins">Writing Period In Minutes</label>
                            <input type="number" min="1" max="20160" id="writingTimePeriodInMins" name="name">
                    </div>
                            
                    <div class="form-group">
                        <label for="votingTimePeriodInMins">Voting Period In Minutes</label>
                            <input type="number" min="1" max="20160" id="votingTimePeriodInMins" name="name">
                    </div> 
                {{!-- </div> --}}
            </div>
        </div>

        <div class="row">
            <div class="column">
                {{!-- <div class="col-sm-4">                --}}
                    <div class="form-group">
                        <h4>Open Writing To Others</h4>
                            <select data-placeholder="" class="chosen-select" id="openWritingToOthers" >
                                <option value= "">Choose One</option>
                                <option value="true">true</option>
                                <option value="false">false</option>                        
                            </select>
                    </div>

                    <div class="form-group">
                        <h4>Open Voting To Others</h4>
                            <select data-placeholder="" class="chosen-select" id="openVotingToOthers">
                                    <option value= "">Choose One</option>
                                    <option value="true">true</option>
                                    <option value="false">false</option>                        
                            </select>
                    </div>
                {{!-- </div> --}}
            </div>
            
            <div class="column">
                {{!-- <div class="col-sm-4"> --}}
                    <div class="form-group">
                        <h4>Publicly Visible</h4>
                            <select data-placeholder="" class="chosen-select" id="visibleToPublic">
                                    <option value= "">Choose One</option>
                                    <option value="true">true</option>
                                    <option value="false">false</option>                        
                            </select>
                    </div>

                    <div class="form-group">
                        <h4>Pause Story Voting Period</h4>
                            <select data-placeholder="" class="chosen-select" id="scheduleActive">
                                <option value="">Choose One</option>
                                <option value="true">true</option>
                                <option value="false">false</option>
                            </select>
                    </div>
                {{!-- </div> --}}
            </div>
        </div>
    {{!-- End of row, end of form --}}
        </form>    
    </div>

<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-9">
        <button class="btn btn-primary" type="submit" id="createStory">Create My Story!</button>
    </div>
</div>

{{!-- End of container for first column --}}
</div>

